<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Ícono de inventario a la izquierda -->
    <ImageView
        android:id="@+id/widget_inventory_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_inventory_list"
        android:contentDescription="@string/inventory_icon_description"
        android:tint="@color/white"
        android:scaleType="centerInside" />

    <!-- Texto "¿Cuánto tengo de inventario?" -->
    <TextView
        android:id="@+id/widget_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_inventory_icon"
        android:layout_alignParentTop="true"
        android:text="@string/widget_question"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="12dp" />

    <!-- Texto "Inventory" en la parte inferior izquierda -->
    <TextView
        android:id="@+id/widget_inventory_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Inventory"
        android:textColor="@color/primary_orange"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Ícono de ojo en parte superior derecha -->
    <ImageButton
        android:id="@+id/widget_eye_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_eye_open"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/widget_eye_icon_description"
        android:scaleType="centerInside"
        android:tint="@color/white" />

    <!-- Saldo del inventario -->
    <TextView
        android:id="@+id/widget_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/widget_eye_icon"
        android:layout_marginEnd="12dp"
        android:text="$ ******"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace" />

    <!-- Botón "Gestionar Inventario" -->
    <LinearLayout
        android:id="@+id/widget_manage_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar Inventario"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_settings"
            android:tint="@color/primary_orange" />

    </LinearLayout>

</RelativeLayout>
